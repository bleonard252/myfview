

{
    "plugins": ["plugins/markdown"],
    "recurseDepth": 10,
    "source": {
        "includePattern": ".+\\.js(doc|x)?$",
        "excludePattern": "(^|\\/|\\\\)_"
    },
    "sourceType": "module",
    "tags": {
        "allowUnknownTags": true,
        "dictionaries": ["jsdoc","closure"]
    },
    "templates": {
        "cleverLinks": false,
        "monospaceLinks": false
    },
    "opts": {
        "template": "./node_modules/better-docs",
        "readme": "./README.md",
        "package": "./package.json",
        "encoding": "utf8",
        "destination": "./docs/",
        "recurse": true,
        "tutorials": "./docsrc/tutorials"
    }
}

